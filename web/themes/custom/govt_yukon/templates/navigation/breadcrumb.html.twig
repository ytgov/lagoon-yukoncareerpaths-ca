{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  {% set component_prefix = 'comp-breadcrumbs' %}
  <nav class="{{ component_prefix }}" role="navigation" aria-labelledby="system-breadcrumb">
    <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
    <ol class="{{ component_prefix ~ '__list' }}">
    {% for item in breadcrumb %}
      <li class="{{ component_prefix ~ '__list__item' }}">
        {% if item.url %}
          <a href="{{ item.url }}" class="{{ component_prefix ~ '__list__item__link' }}">{{ item.text }}</a>
        {% else %}
          {{ item.text }}
        {% endif %}
      </li>
    {% endfor %}
    </ol>
  </nav>
{% endif %}
